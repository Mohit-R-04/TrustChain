# Production Environment Variables for Backend
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to Git!

# ============================================
# Clerk Configuration (Production)
# ============================================
# Get these from: https://dashboard.clerk.com → Your Production Instance → API Keys
CLERK_SECRET_KEY=sk_live_YOUR_PRODUCTION_SECRET_KEY_HERE
CLERK_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# ============================================
# Database Configuration (Production)
# ============================================
# Use your production Supabase or PostgreSQL connection string
SPRING_DATASOURCE_URL=jdbc:postgresql://your-production-db-host:5432/trustchain_prod?sslmode=require
SPRING_DATASOURCE_USERNAME=your_production_db_username
SPRING_DATASOURCE_PASSWORD=your_production_db_password

# ============================================
# Email Configuration (Production)
# ============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-production-email@gmail.com
MAIL_PASSWORD=your-gmail-app-specific-password
MAIL_SMTP_AUTH=true

# ============================================
# OTP Configuration
# ============================================
OTP_DELIVERY_MODE=email
OTP_DELIVERY_FALLBACK_TO_LOG=false
OTP_VALIDITY_SECONDS=300
OTP_COOLDOWN_SECONDS=30
OTP_MAX_ATTEMPTS=5

# ============================================
# Blockchain Configuration (Production)
# ============================================
BLOCKCHAIN_ENABLED=true
BLOCKCHAIN_DEMO_MODE=false
POLYGON_AMOY_RPC=https://polygon-amoy.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
BLOCKCHAIN_CHAIN_ID=80002
TRUSTCHAIN_ESCROW_CONTRACT_ADDRESS=0xYourProductionContractAddress
TRUSTCHAIN_ESCROW_PRIVATE_KEY=your_production_wallet_private_key
BLOCKCHAIN_GAS_LIMIT=6000000
BLOCKCHAIN_POLL_INTERVAL_MS=10000

# ============================================
# IPFS Configuration (Production)
# ============================================
IPFS_PROVIDER=web3storage
IPFS_WEB3STORAGE_TOKEN=your_production_web3storage_token
# Alternative: Pinata
# IPFS_PROVIDER=pinata
# PINATA_JWT=your_pinata_jwt_token
# PINATA_API_BASE_URL=https://api.pinata.cloud

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# Security Configuration
# ============================================
# NEVER flush database in production!
TRUSTCHAIN_DB_FLUSH_ON_START=false

# ============================================
# Server Configuration
# ============================================
SERVER_PORT=8080
