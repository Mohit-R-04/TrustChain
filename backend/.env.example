# Supabase Database Configuration
# Get these from your Supabase project: Settings -> Database

SUPABASE_DB_HOST=db.<your-project-ref>.supabase.co
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=<your-database-password>
SUPABASE_DB_PORT=5432

# Email (SMTP) Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=<your-sender-email>
MAIL_PASSWORD=<your-app-password-or-smtp-password>
MAIL_SMTP_AUTH=true
MAIL_AUTH_MECHANISMS=LOGIN
MAIL_SSL_TRUST=smtp.gmail.com
MAIL_DEBUG=false

# OTP Delivery Configuration
OTP_DELIVERY_MODE=email
OTP_DELIVERY_FALLBACK_TO_LOG=false

# OTP Settings
OTP_VALIDITY_SECONDS=300
OTP_COOLDOWN_SECONDS=30
OTP_MAX_ATTEMPTS=5
OTP_VERIFICATION_TOKEN_VALIDITY_SECONDS=600
